<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/voca_desc_border"
    android:id="@+id/rl_from">
    <ImageView
        android:id="@+id/iv_from_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/ic_launcher_foreground"/>

    <TextView
        android:id="@+id/tv_from_label"
        style="@style/BasicTextViewStyle"
        tools:text="출처 바로가기"
        android:textAlignment="viewStart"
        android:layout_toEndOf="@+id/iv_from_thumbnail"
        android:paddingStart="10dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv_from_url"
        style="@style/BasicTextViewStyle"
        tools:text="출처 URL"
        android:textAlignment="viewStart"
        android:layout_below="@+id/tv_from_label"
        android:layout_toEndOf="@id/iv_from_thumbnail"
        android:paddingStart="10dp"
        android:layout_marginTop="20dp" />

</RelativeLayout>